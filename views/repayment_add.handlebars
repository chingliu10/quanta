    <div class="app-content">
        <div class="container-fluid">
            <!-- Breadcrumb -->
            <div class="breadcrumb">
                <span class="breadcrumb-item">Home</span>
                <span class="breadcrumb-item active">Add Repayment</span>
            </div>

            <!-- Form Container -->
            <div class="form-container">
                <h1 class="page-title">Add Repayment</h1>

                <form id="repaymentForm">
                    <!-- Repayment Amount -->
                    <div class="form-group">
                        <label class="form-label">
                            Repayment Amount <span class="required">*</span>
                        </label>
                        <div class="amount-input-group">
                            <input type="number" class="form-control" id="repaymentAmount" step="0.01" min="0" placeholder="0.00" required>
                            <div class="amount-controls">
                                <button type="button" class="amount-btn" onclick="adjustAmount(1)">+</button>
                                <button type="button" class="amount-btn" onclick="adjustAmount(-1)">-</button>
                            </div>
                        </div>
                    </div>

                    <!-- Repayment Method -->
                    <div class="form-group">
                        <label class="form-label">
                            Repayment Method <span class="required">*</span>
                        </label>
                        <select class="form-control form-select" id="repaymentMethod" required>
                            <option value="cash" selected>Cash</option>
                            <option value="bank_transfer">Bank Transfer</option>
                            <option value="check">Check</option>
                            <option value="mobile_money">Mobile Money</option>
                            <option value="card">Card Payment</option>
                        </select>
                    </div>

                    <!-- Collection Date -->
                    <div class="form-group">
                        <label class="form-label">
                            Collection Date <span class="required">*</span>
                        </label>
                        <input type="date" class="form-control" id="collectionDate" required>
                    </div>

