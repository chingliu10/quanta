<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Branches</title>
    {{> toplinks }}
</head>
<body>
    <div class="d-flex">
        {{> sidebar }}

        <div class="flex-grow-1">
            {{> topnav user=user }}

            <div class="container mt-4">
                <h2>Branches</h2>

                <!-- Error Message -->
                {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
                {{/if}}

                <!-- Branches Table -->
                <table id="branches-table" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Users</th>
                            <th>Notes</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each branches}}
                        <tr>
                            <td>{{this.branch_name}}</td>
                            <td>{{this.user_count}}</td>
                            <td>{{this.branch_notes}}</td>
                            <td>
                                <div class="dropdown">
                                    <button 
                                        class="btn btn-sm dropdown-toggle" 
                                        type="button" 
                                        id="actionMenu{{this.id}}" 
                                        data-bs-toggle="dropdown" 
                                        aria-expanded="false"
                                        style="background-color: #87CEEB;color : white;"
                                    >
                                        Action
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="actionMenu{{this.id}}">
                                        <li><a class="dropdown-item" href="/branch/edit/{{this.id}}">Edit</a></li>
                                        <li><a class="dropdown-item text-danger" href="/branch/delete/{{this.id}}">Delete</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{> bottomlinks }}
</body>
</html>
