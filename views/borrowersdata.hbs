<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Borrowers</title>
    {{>toplinks}}
    <link rel="stylesheet" href="/css/datatables/datatables.min.css">
    <style>
        /* Custom styles for table */
        table#borrowers-table {
            border-collapse: collapse;
            background-color: #f9f9f9;
            width: 100%;
            margin: 20px 0; /* Top and bottom spacing */
        }

        table#borrowers-table th {
            background-color: #001F3F; /* Navy Blue for headers */
            color: white;
            text-align: left;
            padding: 12px;
            font-size: 14px; /* Reduced font size */
        }

        table#borrowers-table td {
            padding: 10px 12px; /* Left and right padding for table cells */
            font-size: 13px; /* Slightly smaller font for better readability */
            color: #333;
        }

        table#borrowers-table tbody tr:nth-child(odd) {
            background-color: #87CEEB; /* Light Blue for alternating rows */
        }

        table#borrowers-table tbody tr:nth-child(even) {
            background-color: #f4f4f9; /* Neutral for contrast */
        }

        /* Dropdown customization */
        .dropdown-menu {
            background-color: white;
            border: 1px solid #001F3F;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .dropdown-menu a.dropdown-item {
            color: #001F3F;
        }

        .dropdown-menu a.dropdown-item:hover {
            background-color: #87CEEB;
            color: #001F3F;
        }

        .dropdown-menu a.dropdown-item.text-danger {
            color: #dc3545;
        }

        .dropdown-menu a.dropdown-item.text-danger:hover {
            background-color: #f8d7da;
            color: #dc3545;
        }

        /* Add Borrower Button */
        .add-borrower-btn {
            background-color: #001F3F; /* Navy Blue */
            color: white;
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 14px;
        }

        .add-borrower-btn:hover {
            background-color: #87CEEB;
            color: white;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        {{>sidebar}}

        <!-- Main Content -->
        <div class="flex-grow-1">
            <!-- Top Navbar -->
            {{>topnav user=user.user}}

            <!-- Borrowers DataTable -->
            <div class="container mt-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title">Borrowers List</h3>
                        <a href="/borrower/add" class="btn add-borrower-btn">+ Add Borrower</a>
                    </div>
                    <div class="table-responsive">
                        <table id="borrowers-table" class="table card-table table-vcenter text-nowrap">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Business</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each borrowers}}
                                <tr>
                                    <td>{{this.first_name}} {{this.last_name}}</td>
                                    <td>{{this.business_name}}</td>
                                    <td>{{this.mobile}}</td>
                                    <td>{{this.email}}</td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm dropdown-toggle" 
                                             style="background-color: #87CEEB; color: white;"
                                             type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Actions
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="/borrower/details/{{this.id}}">Details</a></li>
                                                <li><a class="dropdown-item" href="/borrower/edit/{{this.id}}">Edit</a></li>
                                                <li><a class="dropdown-item text-danger" href="/borrower/delete/{{this.id}}">Delete</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabler JS -->
    {{>bottomlinks}}
    <script src="/js/jquery/jquery-3.6.0.min.js"></script>
    <script src="/js/jquery/jquery.datatables.min.js"></script>
    <script src="/js/jquery/datatables.buttons.min.js"></script>
    <script src="/js/jquery/buttons.print.min.js"></script>
    <script>
       $(document).ready(function() {
                $('#borrowers-table').DataTable({
                    paging: true,
                    searching: true,
                    order: [[0, 'asc']], // Default ordering by first column (Full Name)
                    dom: 'Bfrtip', // Add buttons to the table
                    buttons: [
                        {
                            extend: 'print',
                            text: 'Print',
                            className: 'btn btn-secondary'
                        }
                    ]
                });
        });
    </script>
</body>
</html>
