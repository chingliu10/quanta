    <div class="app-content-header">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <div class="col-sm-6"><h3 class="mb-0">Create Loan Product</h3></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                  <li class="breadcrumb-item"><a href="/loan/products">Loan Products</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Products</li>
                </ol>
              </div>
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
 </div>
    
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <form id="loanProductForm" action="/loan/loan_product_create" method="POST">
                    <!-- Basic Details Card -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle me-2"></i>Basic Details</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productName">Product Name</label>
                                <input type="text" class="form-control" id="productName" name="productName" placeholder="Enter product name" required>
                            </div>
                        </div>
                    </div>

                    <!-- Principal Configuration -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-dollar-sign me-2"></i>Principal Configuration</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Minimum Principal</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                            <input type="number" class="form-control" name="minPrincipal" placeholder="0.00" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Default Principal</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                            <input type="number" class="form-control" name="defaultPrincipal" placeholder="0.00" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Maximum Principal</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                            <input type="number" class="form-control" name="maxPrincipal" placeholder="0.00" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Interest Configuration -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-percentage me-2"></i>Interest Configuration</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Interest Method</label>
                                        <select class="form-select" name="interestMethod" required>
                                            <option value="flat_rate">Flat Rate</option>
                                            <option value="declining_equal_installments">Declining Balance-Equal Installments</option>
                                            <option value="declining_equal_principal">Declining Balance-Equal Principal</option>
                                            <option value="interest_only">Interest Only</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Interest Period</label>
                                        <select class="form-select" name="interestPeriod">
                                            <option value="day">Per Day</option>
                                            <option value="week">Per Week</option>
                                            <option value="month">Per Month</option>
                                            <option value="year">Per Year</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Default Interest Rate (%)</label>
                                        <div class="input-group">
                                            <input type="number" step="0.01" class="form-control" name="defaultInterest" placeholder="0.00" required>
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Minimum Interest Rate (%)</label>
                                        <div class="input-group">
                                            <input type="number" step="0.01" class="form-control" name="minInterest" placeholder="0.00">
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Maximum Interest Rate (%)</label>
                                        <div class="input-group">
                                            <input type="number" step="0.01" class="form-control" name="maxInterest" placeholder="0.00">
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="overrideInterest" name="overrideInterest">
                                    <label class="custom-control-label" for="overrideInterest">Allow Interest Override</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Duration and Repayment -->
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-calendar me-2"></i>Duration and Repayment</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Default Duration</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" name="defaultDuration" required>
                                            <select class="form-select" name="durationType" style="max-width: 150px;">
                                                <option value="day">Day(s)</option>
                                                <option value="week">Week(s)</option>
                                                <option value="month">Month(s)</option>
                                                <option value="year">Year(s)</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Repayment Cycle</label>
                                        <select class="form-select" name="repaymentCycle" required>
                                            <option value="daily">Daily</option>
                                            <option value="weekly">Weekly</option>
                                            <option value="monthly">Monthly</option>
                                            <option value="annually">Yearly</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <label>Decimal Places</label>
                                <select class="form-select" name="decimalPlaces">
                                    <option value="0">Round to whole number</option>
                                    <option value="1">1 decimal place</option>
                                    <option value="2">2 decimal places</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="card">
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Loan Product
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
    {{> flash_message}}