<div class="app-content-header">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <div class="col-sm-6"><h3 class="mb-0">Capital</h3></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                  <li class="breadcrumb-item"><a href="/branch/view">Branches</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Branch</li>
                </ol>
              </div>
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
 </div>
<div class="app-content">
    <div class="container-fluid">
         <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Edit Capital</h3>
                    </div>
                    <form method="post" action="/capital/add">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bank">Bank</label>
                                <select class="form-select" id="bank" name="bank" required>
                                    <option value="">Select Bank</option>
                                </select>
                            </div>
                            <input type="text" value="{{this.capitalDetail.bank_account_id}}" hidden>
                            <div id="data-container" data-array="{{{json this.bank_accounts}}}"></div>
                            <div class="form-group">
                                <label for="amount">Amount</label>
                                <input type="number" class="form-control" id="amount" name="amount" 
                                       step="0.01" min="0" placeholder="Enter amount" value="{{this.capitalDetail.amount}}" required>
                            </div>
                            
                            <div class="form-group">
                            <label for="date">Date</label>
                            <input type="date" class="form-control" id="date" name="date" 
                                    data-original-date="{{formatDateTime this.capitalDetail.created_at}}" required>
                            </div>
                          
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea class="form-control" id="description" name="description" value="dfdf" 
                                          rows="3" placeholder="Enter description"></textarea>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{> flash_message}}
<script>

    document.addEventListener("DOMContentLoaded", (event) => {


         // Parse the JSON from the data attribute
  const dataContainer = document.getElementById('data-container');
  const myArray = JSON.parse(dataContainer.dataset.array);

  console.log(myArray)
                // Get the input element
        const dateInput = document.getElementById('date');

        // Retrieve the custom data attribute
        const originalDate = dateInput.dataset.originalDate; // "1/26/2025"

        // Convert to YYYY-MM-DD format
        const [month, day, year] = originalDate.split('/');
        const isoDate = `${year}-${month.padStart(2, '0')}-${day.padStart(2, '0')}`;

        // Set the input's value
        dateInput.value = isoDate;

    });

     
</script>