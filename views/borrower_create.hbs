<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Borrower</title>
    {{>toplinks}}
    <style>
        .form-container {
            margin: 30px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            background-color: #001F3F;
            color: white;
            padding: 15px;
            border-radius: 8px 8px 0 0;
            margin-bottom: 15px;
        }

        .form-control {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
            color: #333;
        }

        input, select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .btn-primary {
            display: inline;
            background-color: #001F3F;
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            text-align: right;
        }

        .btn-primary:hover {
            background-color: #87CEEB;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        {{>sidebar}}

        <!-- Main Content -->
        <div class="flex-grow-1">
            <!-- Top Navbar -->
            {{>topnav user=user.user}}

            <!-- Borrower Form -->
            <div class="form-container">
                <div class="form-header">
                    <h2>Add New Borrower</h2>
                </div>
                <form action="/borrower/add" method="POST" onsubmit="return validateForm()">
                    <!-- First Name -->
                    <div class="form-control">
                        <label for="first_name">First Name <span style="color: red;">*</span></label>
                        <input type="text" id="first_name" name="first_name" placeholder="Enter first name" required>
                    </div>

                    <!-- Last Name -->
                    <div class="form-control">
                        <label for="last_name">Last Name <span style="color: red;">*</span></label>
                        <input type="text" id="last_name" name="last_name" placeholder="Enter last name" required>
                    </div>

                    <!-- Gender -->
                    <div class="form-control">
                        <label for="gender">Gender</label>
                        <select id="gender" name="gender" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>

                    <!-- Business -->
                    <div class="form-control">
                        <label for="business">Business</label>
                        <input type="text" id="business" name="business" placeholder="Enter business name">
                    </div>

                    <!-- Address -->
                    <div class="form-control">
                        <label for="address">Address</label>
                        <input type="text" id="address" name="address" placeholder="Enter address">
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>

    {{>bottomlinks}}

    <script>
          document.getElementById('first_name').addEventListener('keydown', function(event) {
                if (event.key === ' ') {
                    event.preventDefault();  // Prevent space bar from being pressed
                }
         });
    </script>
</body>
</html>
