<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteBranchModal" tabindex="-1" aria-labelledby="deleteBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <!-- Modal Header -->
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteBranchModalLabel">
                    <i class="bi bi-exclamation-circle-fill me-2"></i>Confirm Deletion
                </h5>
            </div>

            <!-- Modal Body -->
            <div class="modal-body text-center">
                <div class="my-3">
                    <i class="bi bi-trash3-fill text-danger" style="font-size: 3rem;"></i>
                </div>
                <p class="mb-4">
                    Are you sure you want to delete the branch <strong id="branchName" class="text-danger"></strong>? 
                    This action <span class="fw-bold">cannot</span> be undone.
                </p>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </button>
                <a id="confirmDeleteButton" href="#" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-1"></i>Delete
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const deleteBranchModal = document.getElementById('deleteBranchModal');
        const branchNameElement = document.getElementById('branchName');
        const confirmDeleteButton = document.getElementById('confirmDeleteButton');

        deleteBranchModal.addEventListener('show.bs.modal', (event) => {
            const button = event.relatedTarget;
            const branchId = button.getAttribute('data-branch-id');
            const branchName = button.getAttribute('data-branch-name');

            // Update modal content
            branchNameElement.textContent = branchName;
            confirmDeleteButton.href = `/branch/delete/${branchId}`;
        });
    });
</script>