<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<div class="app-content-header">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <div class="col-sm-6"><h3 class="mb-0">Add Savings Account</h3></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                  <li class="breadcrumb-item"><a href="/savings/accounts/view">All Savings</a></li>
                  <li class="breadcrumb-item active" aria-current="page">savings</li>
                </ol>
              </div>
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
 </div>
<div class="app-content">
    <div class="container-fluid">
         <form action="/savings/accounts/store" method="POST">
    <!-- Card wrapper for the form -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">New Savings Account</h3>
        </div>
        <div class="card-body">
            <!-- Borrower Selection -->
            <div class="form-group mb-3">
                <label for="borrower_id" class="form-label">Borrower</label>
                <select id="borrower_id" name="borrower_id" class="form-select" required>
                    <option value="" disabled selected>Select Borrower</option>
                    {{#each borrowers}}
                    <option value="{{this.id}}">{{this.first_name}} {{this.last_name}}</option>
                    {{/each}}
                </select>
            </div>

            <!-- Savings Product Selection -->
            <div class="form-group mb-3">
                <label for="savings_product_id" class="form-label">Savings Product</label>
                <select id="savings_product_id" name="savings_product_id" class="form-select" required>
                    <option value="" disabled selected>Select Savings Product</option>
                    {{#each savings_products}}
                    <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>

            <!-- Notes -->
            <div class="form-group mb-3">
                <label for="notes" class="form-label">Notes</label>
                <textarea id="notes" name="notes" class="form-control" rows="3" placeholder="Enter any notes..."></textarea>
            </div>
        </div>

        <!-- Card footer with submit button -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Save
            </button>
        </div>
    </div>
</form>
    </div>
</div>
 <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
        $('#borrower_id').select2({
            placeholder: "Select a Borrower",
            allowClear: true,
        });
    });
</script>
