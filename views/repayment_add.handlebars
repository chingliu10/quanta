            background-repeat: no-repeat;
            background-size: 16px;
            padding-right: 45px;
        }

        .amount-input-group {
            position: relative;
            display: flex;
            align-items: center;
        }

        .currency-symbol {
            position: absolute;
            left: 14px;
            color: #64748b;
            font-weight: 500;
            z-index: 2;
        }

        .currency-input {
            padding-left: 32px !important;
        }

        .amount-controls {
            position: absolute;
            right: 6px;
            display: flex;
            flex-direction: column;
            z-index: 2;
            gap: 2px;
        }

        .amount-btn {
            background: #2563eb;
            color: white;
            border: none;
            width: 32px;
            height: 22px;
            font-size: 13px;
            cursor: pointer;
            transition: background-color 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 4px;
