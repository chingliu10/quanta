<div class="app-content-header">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <div class="col-sm-6"><h3 class="mb-0">Change Branch</h3></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                  <li class="breadcrumb-item"><a href="/branch/view">Branches</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Branch</li>
                </ol>
              </div>
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
 </div>
<div class="app-content">
    <div class="container-fluid">
                       <form action="/branch/change" method="POST">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Branch ID</th>
                                    <th>Branch Name</th>
                                    <th>User Count</th>
                                    <th>Notes</th>
                                    <th>Select</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each branches}}
                                    <tr>
                                        <td>{{this.branch_id}}</td>
                                        <td>{{this.branch_name}}</td>
                                        <td>{{this.user_count}}</td>
                                        <td>{{this.branch_notes}}</td>
                                        <td>
                                            <input 
                                                type="radio" 
                                                name="branch_id" 
                                                value="{{this.branch_id}}" 
                                                {{#ifEquals ../user.branchId this.branch_id}}checked{{/ifEquals}}>
                                        </td>
                                    </tr>
                                {{else}}
                                    <tr>
                                        <td colspan="5" class="text-center">No branches available.</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-primary">Change Branch</button>
                    </div>
                </form>
    </div>
</div>
{{> flash_message}}


